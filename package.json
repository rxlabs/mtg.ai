{
  "name": "mtg.ai",
  "license": "MIT",
  "repository": "rxlabs/mtg.ai",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "pretest": "npm-run-all --parallel lint style",
    "test": "true",
    "lint": "tslint --project .",
    "style": "prettier --ignore-path .gitignore --list-different '**/*.ts'",
    "format": "prettier --ignore-path .gitignore --write '**/*.ts'",
    "package": "serverless package",
    "deploy": "serverless deploy --aws-s3-accelerate"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": false
  },
  "dependencies": {
    "actions-on-google": "^2.1.0",
    "request": "^2.86.0",
    "request-promise-native": "^1.0.5",
    "source-map-support": "^0.5.0"
  },
  "devDependencies": {
    "@types/actions-on-google": "^1.10.0",
    "@types/node": "^8.10.15",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.12.1",
    "serverless": "^1.27.2",
    "serverless-domain-manager": "^2.4.0",
    "serverless-plugin-typescript": "^1.1.5",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0"
  },
  "version": "0.1.0"
}
